<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录到ITeam"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/login_top_layout"
        android:background="?android:attr/listDivider" />

    <EditText
        android:id="@+id/longin_phone"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/login_top_layout"
	    android:textColor="#000"
	    android:textSize="15sp"
	    android:layout_marginTop="50dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:singleLine="true"
	    android:background="@drawable/login_edbox"
        android:hint="请输入你的手机" >
    </EditText>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/longin_phone"
	    android:textColor="#000"
	    android:textSize="15sp"
	    android:layout_marginTop="25dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:singleLine="true"
	    android:background="@drawable/login_edbox"
        android:hint="请输入你的密码"
       />

    <EditText
        android:id="@+id/company_id"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/login_password"
	    android:textColor="#000"
	    android:textSize="15sp"
	    android:layout_marginTop="25dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:singleLine="true"
	    android:background="@drawable/login_edbox"
        android:hint="请输入你的密码"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/company_id"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:background="@color/lightskyblue"
        android:text="登录" />

    <Button
        android:id="@+id/sign_in_bt"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/login"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightskyblue"
        android:text="注册" />

    <Button
        android:id="@+id/forget_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/company_id"
        android:layout_below="@+id/company_id"
        android:background="#0000"
        android:text="忘记密码?"
        android:textColor="#00f"
        android:textSize="16sp" />

</RelativeLayout>